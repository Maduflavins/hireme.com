<div class="container">
    <div class="app row clearfix">
        <div class="col-sm-4">
            <input type="hidden" id="userId" value="{{ user._id }}" />
            <div class="row">
                <div class="sidebar right">
                    <div class="overlay">
                        <div class="profile">
                            <div class="pic">
                                <img src="{{ order.dev.picture }}" class="center-block img-responsive" />
                            </div>

                            <div class="info">
                                <h3 class="title name">{{ order.dev.title }}</h3>
                                <div class="bio">
                                    <p>
                                        {{ order.dev.about }}
                                    </p>
                                    <p>
                                        {{ order.dev.state }}
                                    </p>
                                    <p>
                                        {{ order.dev.region }}
                                    </p>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-8">
            <div class="row">
                <div class="chatbox">
                    <div class="chat-msgs clearfix" id="chatMsgs">
                        <p>our chat messages</p>
                    </div>
                    <div class="compose">
                        <form action="#" id="sendMessage" class="form-group">
                            <div class="input-group">
                                <a href="#" class="input-group-addon"><i class="fa fa-plus"></i></a>
                                <input type="text" id="message" class="form-control" placeholder="Your Message">
                                <a href="#" class="input-group-addon"><i class="fa fa-smile-o"></i></a>
                                <input type="submit" class="form-control" value="Send">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>