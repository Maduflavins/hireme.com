<div class="container">
    <h1 class="text-center">Manage Orders</h1>
    <div class="row">
        <div class="overview">
            <div class="list-order-card">
                <div class="list-orders-card">
                    <div class="table-margin">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Dev</th>
                                    <th>Price</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each orders}}
                                <tr>
                                    <td><img class="order-mage-my-dev" src="{{ dev.picture}}">
                                        <span>{{ dev.title }}</span>
                                    </td>
                                    <td>NGN{{dev.price}}</td>
                                    <td><button class="btn btn-warning">In progress</button></td>
                                    <td><a href="/users/{{ seller._id }}/orders/{{ _id }}" class="btn btn-primary">Chat Buyer</a></td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>